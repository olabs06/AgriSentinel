const storageRules = `
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Detection images - users can upload their own
    match /detections/{userId}/{imageId} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      
      // Allow upload if user owns the path and file is an image under 10MB
      allow write: if request.auth != null &&
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Models directory - read-only for authenticated users
    match /models/{modelFile} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins via console
    }
    
    // User profile images
    match /profiles/{userId}/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
                     request.auth.uid == userId &&
                     request.resource.size < 5 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
  }
}
`;